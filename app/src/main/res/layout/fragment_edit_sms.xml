<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sendsms.EditSMSFragment">

    <EditText
        android:id="@+id/numberET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Number..."
        app:layout_constraintRight_toRightOf="@+id/messageBodyET"
        app:layout_constraintLeft_toLeftOf="@+id/messageBodyET"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="1.0" />
    <EditText
        android:id="@+id/messageBodyET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Message..."
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/numberET"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_constraintLeft_creator="1" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send"
        android:id="@+id/sendBtn"
        app:layout_constraintRight_toRightOf="@+id/messageBodyET"
        app:layout_constraintLeft_toLeftOf="@+id/messageBodyET"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/messageBodyET"
        app:layout_constraintVertical_bias="0.075"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
